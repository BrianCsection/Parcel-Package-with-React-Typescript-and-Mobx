{
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "ES2015",
        "allowJs": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ]
}